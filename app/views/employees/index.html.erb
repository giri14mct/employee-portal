<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Employees" %>
  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Employees</h1>
    <%= link_to "New employee", new_employee_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div id="employees" class="min-w-full mt-10">
    <table class="min-w-full border border-collapse border-gray-200 divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 font-medium tracking-wider text-left border border-gray-200">Full Name</th>
          <th class="px-6 py-3 font-medium tracking-wider text-left border border-gray-200">Designation</th>
          <th class="px-6 py-3 font-medium tracking-wider text-left border border-gray-200">Department</th>
          <th class="px-6 py-3 font-medium tracking-wider text-left border border-gray-200"></th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @employees.each do |employee| %>
          <%= render employee %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
